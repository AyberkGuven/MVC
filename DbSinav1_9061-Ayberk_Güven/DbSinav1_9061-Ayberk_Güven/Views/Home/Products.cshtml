@model IEnumerable<DbSinav1_9061_Ayberk_Güven.ViewModel.ProductsViewModel>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>products</span>
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="box">
                        <div class="option_container">
                            <div class="options">
                                @Html.ActionLink("Men's Shirt", "Edit", @*"StudentFollow",*@ new { id = item.Id }, new { @class="option1"})
                                @*<a href="~/Home/Edit" class="option1">Men's Shirt</a>*@
                                <a href=" " class="option2">Buy Now</a>
                            </div>
                        </div>
                        <div class="img-box">
                            <img src="~/images/@item.Image" alt="">
                        </div>
                        <div class="detail-box">
                            <h5>
                                @Html.DisplayFor(modelItem => item.Name)
                            </h5>
                            <h6>
                                @Html.DisplayFor(modelItem => item.Price)$
                            </h6>
                        </div>
                    </div>
                </div>
            }
            <div class="btn-box">
                <a href="">
                    View All products
                </a>
            </div>
        </div>
    </div>
</section>


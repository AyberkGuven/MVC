@model DbSinav1_9061_Ayberk_Güven.ViewModel.DetailsViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<section class="arrival_section">
    <div class="container">
        <div class="box">
            <div class="arrival_bg_box">
                <img src="~/images/@Model.Image" alt="">
            </div>
            <div class="row">
                <div class="col-md-6 ml-auto">
                    @Html.ActionLink(@Model.Genders, "Edit" @*"StudentFollow",*@)
                    <div class="heading_container remove_line_bt">
                        <h2>
                            @Html.DisplayFor(modelItem => Model.Name)
                        </h2>
                    </div>
                    <p style="margin-top: 20px;margin-bottom: 30px;">
                        @Html.DisplayFor(modelItem => Model.Direction)
                    </p>
                    <h3>$@Html.DisplayFor(modelItem => Model.Price)</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h2>Stacked form</h2>
            <div class="mb-3 mt-3">
                <label for="Iamge">Image:</label>
                @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                @*<input type="text" class="form-control" id="Image" placeholder="Enter Image" name="Image">*@
            </div>
            <div class="mb-3">
                <label for="Genders">Genders:</label>
                @*@Html.DropDownListFor(m => m.DetailsId, new SelectList(Model., "Id", "Genders"), new { @class = "form-control form-select" })*@
                @Html.DropDownListFor(m => m.DetailsId, new List<SelectListItem>
                 {
                     new SelectListItem{Text="Kadın", Value="1"},
                     new SelectListItem{Text="Erkek", Value="2"}
                 }, new { @class = "form-control form-select" }
                 )
                @*<select class="form-select form-control" id="select" name="select">
                        <option>Kadın</option>
                        <option>Erkek</option>
                    </select>*@
            </div>
            <div class="mb-3 mt-3">
                <label for="Name">Name:</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Adınızı Giriniz" })
                @*<input type="text" class="form-control" id="Name" placeholder="Enter Name" name="Name">*@
            </div>
            <div class="mb-3">
                <label for="Direction">Direction:</label>
                @Html.TextAreaFor(m => m.Direction, new { @class = "form-control", @placeholder = "Açıklamanızı Giriniz" })
                @*<textarea class="form-control" rows="5" id="Direction" name="Direction"></textarea>*@
            </div>
            <div class="mb-3">
                <label for="Price">Price:</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @placeholder = "Fiyatını Giriniz" })
                @*<input type="text" class="form-control" id="Price" placeholder="Enter Price" name="Price">*@
            </div>
            <div class="mb-3">
                <label for="Price">Sil:</label>
                @Html.CheckBoxFor(m => m.Delete, new { @class = "form-control", @style = "width:17px;display:inline-block;font-size:8px;margin-bottom:0;height:17px;" })
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Güncelle</button>
                @*@Html.ActionLink("Sil", "Delete",  new { @class = "btn btn-danger" })*@

                @*@Html.ActionLink("Güncelle", "Edit", new { @class = "btn btn-success float-right" })*@
                @*@Ajax.ActionLink("Güncelle", "Edit", new { @class = "btn btn-success float-right" }, new AjaxOptions { HttpMethod = "POST" })*@
            </div>
        }
    </div>
</section>